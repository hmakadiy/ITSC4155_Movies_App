<%- include('../partials/header.ejs')%>
<main>    
    
        <%if(showtimes.length){%>
            <p>Mystery</p>
            <%showtimes.forEach(showtime=>{%>
                <div class="container">
                    <ul class="list-group list-group-flush">
                        <%if(showtime.genre === 'Mystery'){%>
                            <li class="list-group-item"><a href = '/<%= showtime.id%>'><p><%= showtime.eventName%></p></a></li><br>
                        <%}%>
                    </ul>
                </div>
            <% });
            
        }%>

        <%if(showtimes.length){%>
            <p>Studying</p>
            <%showtimes.forEach(showtime=>{%>
                <div class="container">
                    <ul class="list-group list-group-flush">
                        <%if(showtime.genre === 'Studying'){%>
                            <li class="list-group-item"><a href = '/<%= showtime.id%>'><p><%= showtime.eventName%></p></a></li><br>
                        <%}%>
                    </ul>
                </div>
            <% });
            
        }%>

        <%if(showtimes.length===0){%>
            <p>There are no events to display.<br><br> Check back later </p>
            
        <%}%>
</main> 
        <%- include('../partials/footer.ejs')%>