<%- include('../partials/header.ejs')%>
<div class = "signup">
    <form action = '/users' method = 'POST'>
        <div class="justify-content-center">
            <div class="form-group">
                <label for="firstName" class="form-label">First Name</label>
                <input class="form-control" type="text" id="firstName" name="firstName" class = "fixed-width" required>
            </div>
            <div class="form-group">
                <label for="lastName" class="form-label">Last Name</label>
                <input class="form-control" type="text" id="lastName" name="lastName" class = "fixed-width" required>
            </div>

            <div class="form-group">
                <label for="email" class="form-label">Email Address</label>
                <input class="form-control" type="email" id="email" name="email" class = "fixed-width" required>
            </div>
            <div class="form-group">
                <label for="password" class="form-label">Password</label>
                <input class="form-control" type="password" id="password" name="password" class = "fixed-width" minlength="8" maxlength="64" required>
            </div><br>
            
           
                <button type="submit" class="btn btn-primary">Sign Up</button>
        </div>
                
    </form>

    </div>
    <%- include('../partials/footer.ejs')%>
